              <input id="dataid" name="dataid" type="hidden" value="{{data._id}}" />
              {{!-- <input id="_id" name="_id" type="hidden" value="5fcd16d03b23b53c78d4ce44" /> --}}
              {{#if error}}
                  <div class="alert alert-error"><button class="close" data-dismiss="alert"></button>{{error}}</div>
              {{/if}}
              {{#if success}}
                  <div class="alert alert-success"><button class="close" data-dismiss="alert"></button>{{success}}</div>
              {{/if}}
                <div id="dvcourseName" class="control-group">
                  <label class="control-label">Degree Name<span class="required">*</span></label>
                  <div class="controls">
                    <input id="courseName" name="courseName" type="text" class="span6 m-wrap vlditm" value="{{data.courseName}}" placeholder="Degree Name" />
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvcourseSpecification" class="control-group">
                  <label class="control-label">Degree Specification<span class="required">*</span></label>
                  <div class="controls">
                    <select id="courseSpecification" name="courseSpecification" class="span6 m-wrap vlditm">
                      {{#each bsdata.categories as |item|}}  
                         <option value="{{item}}" {{#ifCond item '==' ../data.courseSpecification}} selected="selected" {{/ifCond}}>{{item}}</option>
                      {{/each}}  
                    </select>
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvtype" class="control-group">
                  <label class="control-label">Degree Type<span class="required">*</span></label>
                  <div class="controls">
                    <select id="type" name="type" class="span6 m-wrap vlditm">
                      {{#each bsdata.types as |item|}}  
                         <option value="{{item}}" {{#ifCond item '==' ../data.type}} selected="selected" {{/ifCond}}>{{item}}</option>
                      {{/each}}
                    </select>
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvdegreeOverview" class="control-group">
                  <label class="control-label">Degree Importance/Overview<span class="required">*</span></label>
                  <div class="controls">
                    <textarea id="degreeOverview" name="degreeOverview" class="span6 m-wrap vlditm" rows="5" maxlength="100" placeholder="Degree Importance/Overview">{{data.degreeOverview}}</textarea> <span id="textCounter1" class="smptxt"></span>
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvdegreeContent" class="control-group">
                  <label class="control-label">Degree Content<span class="required">*</span></label>
                  <div class="controls">
                    <textarea id="degreeContent" name="degreeContent" class="span6 m-wrap vlditm" rows="5" placeholder="Degree Content">{{data.degreeContent}}</textarea> 
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvtotalNumberCourses" class="control-group">
                  <label class="control-label">Total Number of Courses<span class="required">*</span></label>
                  <div class="controls">
                    <input id="totalNumberCourses" name="totalNumberCourses" type="number" class="span6 m-wrap vlditm" value="{{data.totalNumberCourses}}" placeholder="Total Number of Courses" />
                    <span class="help-inline"></span>
                  </div>
                </div>
