                  <label class="control-label">Course Name<span class="required">*</span><input id="hdncourse" name="hdncourse" type="hidden" value="{{data.course}}" /></label>
                  <div class="controls">
                    <div class="field_wrapper">
                      <input id="course" name="course" type="text" class="span6 m-wrap vlditm" placeholder="Course Name" /> <a id="lnkcourse" href="javascript:void(0);" onclick="AddTextbox(this,'course','Course Name')" class="add_button" title="Add field"><i class="fa fa-plus fa-lg" aria-hidden="true"></i></a>
                      <span class="help-inline"></span>
                    </div>
                  </div>
                </div>
                <div id="dvtotalCourses" class="control-group">
                  <label class="control-label">Total Number of Online Courses<span class="required">*</span></label>
                  <div class="controls">
                    <input id="totalCourses" name="totalCourses" type="number" class="span6 m-wrap vlditm" value="{{data.totalCourses}}" placeholder="Total Number of Online Courses" />
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvonline" class="control-group">
                  <label class="control-label">Online Course Name<span class="required">*</span><input id="hdnonline" name="hdnonline" type="hidden" value="{{data.online}}" /></label>
                  <div class="controls">
                    <div class="field_wrapper">
                      <input id="online" name="online" type="text" class="span6 m-wrap vlditm" placeholder="Online Course Name" /> <a id="lnkonline" href="javascript:void(0);" onclick="AddTextbox(this,'online','Online Course Name')" class="add_button" title="Add field"><i class="fa fa-plus fa-lg" aria-hidden="true"></i></a>
                      <span class="help-inline"></span>
                    </div>
                  </div>
                </div>
                <div id="dvofflinetotal" class="control-group">
                  <label class="control-label">Total Number of Offline Courses<span class="required">*</span></label>
                  <div class="controls">
                    <input id="offlinetotal" name="offlinetotal" type="number" class="span6 m-wrap vlditm" value="{{data.offlinetotal}}" placeholder="Total Number of Offline Courses" />
                    <span class="help-inline"></span>
                  </div>
                </div>
                <div id="dvoffline" class="control-group">
                  <label class="control-label">Offline Course Name<span class="required">*</span><input id="hdnoffline" name="hdnoffline" type="hidden" value="{{data.offline}}" /></label>
                  <div class="controls">
                    <div class="field_wrapper">
                      <input id="offline" name="offline" type="text" class="span6 m-wrap vlditm" placeholder="Offline Course Name" /> <a id="lnkoffline"  href="javascript:void(0);" onclick="AddTextbox(this,'offline','Offline Course Name')" class="add_button" title="Add field"><i class="fa fa-plus fa-lg" aria-hidden="true"></i></a>
                      <span class="help-inline"></span>
                    </div>
                  </div>
                </div>
                {{#ifCond heading '==' "Add"}}
                <div id="dvfacultyName0" class="control-group">
                  <label class="control-label">Faculty Name<span class="required">*</span></label>
                  <div class="controls">
                    <input id="facultyName0" name="facultyName" type="text" class="span6 m-wrap vlditm" value="{{data.facultyName}}" placeholder="Faculty Name" /> <a id="lnkfaculty" href="javascript:void(0);" onclick="AddUpload(this,'faculty','Faculty Name')" class="add_button" title="Add field"><i class="fa fa-plus fa-lg" aria-hidden="true"></i></a>
                    <span class="help-inline fnm0"></span>
                  </div>
                </div>
